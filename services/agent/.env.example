# InfraGPT Agent Service Configuration

# Service Configuration
AGENT_HOST=0.0.0.0
AGENT_HTTP_PORT=8000
AGENT_GRPC_PORT=50051
AGENT_DEBUG=false
AGENT_LOG_LEVEL=INFO

# External Services
AGENT_INFRAGPT_SERVICE_HOST=localhost
AGENT_INFRAGPT_SERVICE_PORT=9090

# LLM Configuration
AGENT_LITELLM_API_KEY=your_openai_api_key_here
