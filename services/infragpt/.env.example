# InfraGPT Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=infragpt
DATABASE_USER=infragpt
DATABASE_PASSWORD=your-database-password-here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
LOG_LEVEL=info
HTTP_PORT=8080
GRPC_PORT=9090
HTTP_LOG=true

# =============================================================================
# CLERK IDENTITY CONFIGURATION
# =============================================================================
CLERK_WEBHOOK_SECRET=your-clerk-webhook-secret-here
CLERK_SECRET_KEY=your-clerk-secret-key-here
CLERK_WEBHOOK_PORT=8085

# =============================================================================
# SLACK INTEGRATION CONFIGURATION
# =============================================================================
SLACK_CLIENT_ID=your-slack-client-id-here
SLACK_CLIENT_SECRET=your-slack-client-secret-here
SLACK_APP_TOKEN=xapp-your-slack-app-token-here
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_REDIRECT_URL=http://localhost:8080/auth/slack/callback
SLACK_SIGNING_SECRET=your-slack-signing-secret-here

# =============================================================================
# GITHUB APP INTEGRATION CONFIGURATION
# =============================================================================
# GitHub App ID (numeric identifier from GitHub App settings)
GITHUB_APP_ID=123456

# GitHub App private key (complete PEM formatted key with newlines)
# Copy the entire contents of your downloaded .pem file here
GITHUB_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----
MIIEpAIBAAKCAQEA...
[Your private key content goes here - keep all newlines]
...
-----END RSA PRIVATE KEY-----"

# Webhook secret for signature validation (generate a secure random string)
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret-here

# Base URL for OAuth callbacks and webhooks
GITHUB_REDIRECT_URL=http://localhost:8080

# Optional: Custom port for GitHub webhook server (defaults to 8081)
GITHUB_WEBHOOK_PORT=8081

# =============================================================================
# AI AGENT CONFIGURATION
# =============================================================================
AGENT_ENDPOINT=[::]:50051
AGENT_RETRY_ATTEMPTS=3

# =============================================================================
# ADDITIONAL INTEGRATIONS (Optional)
# =============================================================================

# AWS Integration
# AWS_ACCESS_KEY_ID=your-aws-access-key-id
# AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
# AWS_REGION=us-west-2

# GCP Integration  
# GCP_SERVICE_ACCOUNT_KEY=your-gcp-service-account-json-key

# PagerDuty Integration
# PAGERDUTY_API_KEY=your-pagerduty-api-key

# Datadog Integration
# DATADOG_API_KEY=your-datadog-api-key
# DATADOG_APPLICATION_KEY=your-datadog-application-key

