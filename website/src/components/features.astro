---
import Link from "@components/ui/link.astro";
// @ts-ignore
import { t } from "i18next";

const features = [
  {
    title: "AI-Powered Cloud Troubleshooting",
    description:
      "InfraGPT sifts through logs, metrics, and alerts to diagnose issues instantly, reducing downtime and frustration",
  },
  {
    title: "GitHub-Powered Code Insights",
    description:
      "Link your GitHub, and let InfraGPT analyze your code directly from your repository to answer DevOps and cloud-related questions",
  },
  {
    title: "Automated Cost Optimization",
    description:
      "Detect unused resources, right-size cloud instances, and get cost-saving recommendations across cloud services",
  },
  {
    title: "Real-Time Slack Integration",
    description:
      "Chat with InfraGPT in Slack to troubleshoot infrastructure issues, analyze logs, and get AI-driven suggestions on the go",
  },
  {
    title: "Multi-Cloud Support",
    description:
      "Works seamlessly with GCP, AWS, and Azure(coming soon), giving you real-time visibility and control over your cloud environment",
  },
  {
    title: "Proactive Alerts & Recommendations",
    description:
      "InfraGPT continuously monitors your cloud usage, sending alerts and proactive suggestions to keep your infrastructure optimized",
  },
];
---

<div class="relative mx-auto max-w-5xl px-6 lg:px-8">
  <div class="mx-auto max-w-2xl lg:text-center">
    <h2 class="text-base font-semibold leading-7 text-black dark:text-white">
      {t("features.title")}
    </h2>
    <p
      class="mt-2 text-3xl font-bold tracking-tight text-black dark:text-white sm:text-4xl"
      style="font-family: 'Young Serif';"
    >
      {t("features.subtitle")}
    </p>
    <p class="mt-6 text-lg leading-8 text-gray-900 dark:text-gray-100">
      {t("features.description")}
    </p>
  </div>
  <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
    <dl
      class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3"
    >
      {
        features.map((item) => (
          <div class="flex flex-col">
            <dt class="flex items-center gap-x-3 text-base font-semibold leading-7 text-black dark:text-white">
              {item.title}
            </dt>
            <dd class="mt-4 flex flex-auto flex-col text-base leading-7 text-gray-900 dark:text-gray-100">
              <p class="flex-auto">{t(item.description)}</p>
            </dd>
          </div>
        ))
      }
    </dl>
  </div>
</div>
